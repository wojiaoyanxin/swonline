<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_plan"
    android:padding="10dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cd_view"
        android:layout_width="78dp"
        android:layout_height="105dp"
        android:layout_marginLeft="4dp"
        android:elevation="0dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="78dp"
            android:layout_height="105dp"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/limit_free"
            android:layout_width="78dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom"
            android:background="@drawable/limit_free"
            android:gravity="center"
            android:text="限时免费"
            android:textColor="#333333"
            android:textSize="9sp"
            android:visibility="visible" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_16dp"
        android:paddingEnd="@dimen/padding_16dp">

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1111"
            android:textColor="#ff030303"
            android:textSize="@dimen/text_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/teacher_with_colon"
                android:textColor="@color/text999"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tv_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/text999"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/last_watch_with_colon"
                android:layout_marginBottom="2dp"
                android:textColor="@color/text999"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:id="@+id/tv_last_watch_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:layout_marginBottom="2dp"
                android:textColor="@color/text999"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>