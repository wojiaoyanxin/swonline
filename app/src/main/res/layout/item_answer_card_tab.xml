<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginEnd="@dimen/margin_14dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selected_bg_answer_card_tab"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_2dp"
        android:paddingEnd="@dimen/padding_14dp"
        android:paddingStart="@dimen/padding_14dp"
        android:paddingTop="@dimen/padding_2dp">

        <TextView
            android:id="@+id/tv_index_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp"
            />

        <TextView
            android:id="@+id/tv_index_split"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp"
            />

        <TextView
            android:id="@+id/tv_index_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp"
            />
    </LinearLayout>

</RelativeLayout>