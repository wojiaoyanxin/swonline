<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/v_question_parsing"
        android:layout_width="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/cl_FF7224"
        android:layout_height="16dp"/>
    <TextView
        app:layout_constraintTop_toTopOf="@id/v_question_parsing"
        app:layout_constraintBottom_toBottomOf="@id/v_question_parsing"
        app:layout_constraintLeft_toRightOf="@id/v_question_parsing"
        android:layout_marginLeft="5dp"
        android:text="本题解析"
        android:textColor="#ff282828"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <io.github.kexanie.library.MathView
        android:id="@+id/mv_question_parsing"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="@id/v_question_parsing"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_question_parsing"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/v_question_difficulty"
        android:layout_width="4dp"
        android:background="@color/cl_FF7224"
        app:layout_constraintTop_toBottomOf="@id/mv_question_parsing"
        app:layout_constraintLeft_toLeftOf="@id/v_question_parsing"
        android:layout_marginTop="15dp"
        android:layout_height="16dp"/>
    <TextView
        android:id="@+id/tv_question_difficulty"
        android:text="难度系数"
        android:textColor="#ff282828"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/v_question_difficulty"
        app:layout_constraintBottom_toBottomOf="@id/v_question_difficulty"
        app:layout_constraintLeft_toRightOf="@id/v_question_difficulty"
        android:layout_height="wrap_content"/>

    <com.cb.ratingbar.CBRatingBar
        android:id="@+id/starbar_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:starCanTouch="false"
        app:starCount="5"
        app:starPathData="@string/round_star"
        app:starCoverColor="@color/cl_FF7224"
        app:starFillColor="#E5E5E5"
        app:starProgress="20"
        app:starShowStroke="false"
        app:layout_constraintLeft_toRightOf="@id/tv_question_difficulty"
        app:starSize="17dp"
        app:starSpace="7dp"
        app:layout_constraintTop_toTopOf="@id/v_question_difficulty"
        app:layout_constraintBottom_toBottomOf="@id/v_question_difficulty"
        app:starStrokeColor="@color/cl_FF7224" />

</android.support.constraint.ConstraintLayout>