<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:ignore="MissingPrefix"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_mail_content_more_dialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F8F8F8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/dialog_et_mail_input_content"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="50dp"
        android:background="@color/white"
        android:hint="我要留言"
        android:focusable="true"
        android:textSize="14sp"
        android:focusableInTouchMode="true"
        android:paddingLeft="13dp"
        app:bl_corners_radius="3dp"
        app:bl_stroke_color="@color/cl_dddddd"
        app:bl_stroke_width="1dp"
        app:bl_solid_color="@color/cl_ffffff"
        app:layout_constraintBottom_toBottomOf="@id/view_mail_content_more_dialog"
        app:layout_constraintTop_toTopOf="@id/view_mail_content_more_dialog"
        />

    <ImageView
        android:id="@+id/dialog_iv_mail_content_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:src="@drawable/iv_mail_send_msg"
        app:layout_constraintBottom_toBottomOf="@id/view_mail_content_more_dialog"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_mail_content_more_dialog"
        />
</android.support.constraint.ConstraintLayout>