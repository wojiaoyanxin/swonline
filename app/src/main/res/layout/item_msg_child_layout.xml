<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/white">

    <com.shangde.lepai.uilib.view.RoundImageView
        android:id="@+id/iv_user_head"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_avatar_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text=""
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/text_17sp"
        app:layout_constraintLeft_toRightOf="@id/iv_user_head"
        app:layout_constraintTop_toTopOf="@id/iv_user_head" />

    <TextView
        android:id="@+id/tv_user_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text=""
        android:textColor="@color/cl_999999"
        android:textSize="@dimen/text_12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_head"
        app:layout_constraintLeft_toRightOf="@id/iv_user_head" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="75dp"
        android:background="@color/cl_dddddd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:text=""
        android:gravity="center"
        android:visibility="visible"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/text_17sp"
        app:layout_constraintLeft_toRightOf="@id/iv_user_head" />


</android.support.constraint.ConstraintLayout>