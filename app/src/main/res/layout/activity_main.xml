<?xml version="1.0" encoding="utf-8"?>

<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@color/text999" />

        <com.shangde.lepai.uilib.bottombar.BottomBarLayout
            android:id="@+id/bottom_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50dp"
            android:background="@drawable/shape_bottom_bar"
            android:gravity="center"
            android:orientation="horizontal">

            <com.shangde.lepai.uilib.bottombar.BottomBarItem
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:hasText="true"
                app:iconHeight="@dimen/height_30dp"
                app:iconNormal="@drawable/ic_home_normal"
                app:iconSelected="@drawable/ic_home_select"
                app:iconWidth="@dimen/width_30dp"
                app:itemText="@string/home"
                app:itemTextSize="@dimen/text_11sp"
                app:openTouchBg="false"
                app:textColorNormal="@color/textNormalColor"
                app:textColorSelected="@color/textSelectColor"
                app:touchDrawable="@null" />

            <com.shangde.lepai.uilib.bottombar.BottomBarItem
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:hasText="true"
                app:iconHeight="@dimen/height_30dp"
                app:iconNormal="@drawable/ic_classroom_normal"
                app:iconSelected="@drawable/ic_classroom_select"
                app:iconWidth="@dimen/width_30dp"
                app:itemText="@string/classroom"
                app:itemTextSize="@dimen/text_11sp"
                app:openTouchBg="false"
                app:textColorNormal="@color/textNormalColor"
                app:textColorSelected="@color/textSelectColor"
                app:touchDrawable="@null" />

            <!-- 社区
            <com.shangde.lepai.uilib.bottombar.BottomBarItem
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="visible"
                app:hasText="true"
                app:iconHeight="@dimen/height_30dp"
                app:iconNormal="@drawable/ic_community_normal"
                app:iconSelected="@drawable/ic_community_select"
                app:iconWidth="@dimen/width_30dp"
                app:itemText="社区"
                app:itemTextSize="@dimen/text_11sp"
                app:openTouchBg="false"
                app:textColorNormal="@color/textNormalColor"
                app:textColorSelected="@color/textSelectColor"
                app:touchDrawable="@null" />-->

            <com.shangde.lepai.uilib.bottombar.BottomBarItem
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:hasText="true"
                app:iconHeight="@dimen/height_30dp"
                app:iconNormal="@drawable/ic_mine_normal"
                app:iconSelected="@drawable/ic_mine_select"
                app:iconWidth="@dimen/width_30dp"
                app:itemText="@string/mine"
                app:itemTextSize="@dimen/text_11sp"
                app:openTouchBg="false"
                app:textColorNormal="@color/textNormalColor"
                app:textColorSelected="@color/textSelectColor"
                app:touchDrawable="@null" />

        </com.shangde.lepai.uilib.bottombar.BottomBarLayout>

    </LinearLayout>

</FrameLayout>