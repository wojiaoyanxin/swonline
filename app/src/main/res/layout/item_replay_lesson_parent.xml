<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/padding_14dp"
    android:paddingEnd="@dimen/padding_14dp"
    android:paddingStart="@dimen/padding_14dp"
    android:paddingTop="@dimen/padding_14dp">

    <TextView
        android:id="@+id/tv_subject_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/text333"
        android:textSize="@dimen/text_16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subject_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_4dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="课程数: "
            android:textColor="@color/text666"
            android:textSize="@dimen/text_13sp" />

        <TextView
            android:id="@+id/tv_lesson_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="1"
            android:textColor="@color/text666"
            android:textSize="@dimen/text_13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_4dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="作业数: "
            android:textColor="@color/text666"
            android:textSize="@dimen/text_13sp" />

        <TextView
            android:id="@+id/tv_un_finished_homework_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="1"
            android:textColor="@color/text666"
            android:textSize="@dimen/text_13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_collapse_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_collapse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>