<?xml version="1.0" encoding="utf-8"?>


<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/layout_common_header" />

        <include layout="@layout/layout_header_bottom_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="3dp">

            <TextView
                android:id="@+id/all_pause"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="7.5dp"
                android:layout_weight="1"
                android:background="@drawable/all_pause_start_bg"
                android:gravity="center"
                android:text="全部暂停"
                android:textColor="#282828"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_my_all_download"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/all_pause_start_bg"
                android:gravity="center"
                android:text="我的下载"
                android:textColor="#282828"
                android:textSize="12sp" />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout

            android:id="@+id/bottom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/select_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/all_select"
                android:gravity="center"
                android:paddingBottom="11dp"
                android:text="全选"
                android:textColor="@color/text333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/delete_un_enable"
                android:gravity="center"
                android:paddingBottom="11dp"
                android:text="删除"
                android:textColor="#8D8D8D"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>


    <include

        layout="@layout/layout_empty_handout" />

</FrameLayout>


