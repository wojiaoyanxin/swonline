<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <android.support.v7.widget.CardView
            android:id="@+id/cd_view"
            android:layout_width="78dp"
            android:layout_height="105dp"
            android:layout_marginLeft="4dp"
            android:elevation="0dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/daka_head_img"
                android:layout_width="78dp"
                android:layout_height="105dp"
                android:background="@color/gray"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/limit_free"
                android:layout_width="78dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/cd_view"
                android:layout_gravity="bottom"
                android:background="@drawable/limit_free"
                android:gravity="center"
                android:text="限时免费"
                android:textColor="#333333"
                android:textSize="9sp"
                android:visibility="gone" />

        </android.support.v7.widget.CardView>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/zhibozhong"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="8sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/cd_view"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/class_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/cd_view"
            android:text=""
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/teacher_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/class_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/teacher_name"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/watch_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teacher_intro"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/cd_view"
            android:drawableLeft="@drawable/watch"
            android:drawablePadding="3dp"
            android:text=""
            android:textColor="#999999"
            android:textSize="11sp" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cd_view"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/cd_view"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="2.5dp">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shijian" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:text=""
                android:paddingBottom="1dp"
                android:textColor="#B79372"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/yuyue"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/cd_view"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_common_home"
            android:gravity="center"
            android:text="预约"
            android:textColor="#333333"
            android:textSize="11sp" />

    </RelativeLayout>

</FrameLayout>