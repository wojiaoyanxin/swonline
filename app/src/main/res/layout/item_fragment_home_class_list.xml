<?xml version="1.0" encoding="utf-8"?>


<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tv_class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/tv_chuqin_state"
            android:maxLines="2"
            android:text="第7第7节第7节节"
            android:textColor="@color/cl_282828"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_class_name"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_teacher_head"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_teacher_header" />

            <TextView
                android:id="@+id/tv_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="李晓琪  2天前" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_kehouzuoye"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_below="@+id/ll_teacher"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_home_class_bottom"
            android:gravity="center"
            android:text="课后作业"
            android:textColor="#FF9F00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_ziliao"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_below="@+id/ll_teacher"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/tv_kehouzuoye"
            android:background="@drawable/shape_home_class_bottom"
            android:gravity="center"
            android:text="资料"
            android:textColor="#FF9F00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_tingke"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_below="@+id/ll_teacher"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_home_class_bottom_tingke"
            android:gravity="center"
            android:text="听课"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_chuqin_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="2dp"
            android:text="未出勤"
            android:textColor="@color/cl_FF7224"
            android:textSize="14sp"
            android:visibility="invisible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cl_F5F5F5" />

</LinearLayout>
