<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColorSettingGray"
    android:orientation="vertical">

    <include layout="@layout/layout_common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_14dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44dp"
            android:layout_marginTop="@dimen/margin_14dp"
            android:background="@drawable/selector_bg_white_gray"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/padding_14dp"
            android:paddingStart="@dimen/padding_14dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="系统通知提醒"
                android:textColor="@color/text333"
                android:textSize="@dimen/text_16sp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_32dp"
                android:layout_gravity="center_vertical"
                android:switchMinWidth="20dp"
                android:textOff="  "
                android:textOn="  "
                android:thumb="@drawable/thumb"
                android:track="@drawable/track" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/margin_16dp"
            android:background="@color/colorLine"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44dp"
            android:background="@drawable/selector_bg_white_gray"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/padding_14dp"
            android:paddingStart="@dimen/padding_14dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/class_notice"
                android:textColor="@color/text333"
                android:textSize="@dimen/text_16sp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_32dp"
                android:layout_gravity="center_vertical"
                android:button="@drawable/selected_switch"
                android:switchMinWidth="20dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/margin_16dp"
            android:background="@color/colorLine"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44dp"
            android:background="@drawable/selector_bg_white_gray"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/padding_14dp"
            android:paddingStart="@dimen/padding_14dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/message_notice"
                android:textColor="@color/text333"
                android:textSize="@dimen/text_16sp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_32dp"
                android:layout_gravity="center_vertical"
                android:switchMinWidth="20dp"
                android:textOff="  "
                android:textOn="  "
                android:thumb="@drawable/thumb"
                android:track="@drawable/track" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/margin_16dp"
            android:background="@color/colorLine"
            android:visibility="gone" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_change_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44dp"
            android:background="@drawable/selector_bg_white_gray"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/padding_14dp"
            android:paddingStart="@dimen/padding_14dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/change_password"
                android:textColor="@color/text333"
                android:textSize="@dimen/text_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_right_arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contact_service"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44dp"
            android:background="@drawable/selector_bg_white_gray"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/padding_14dp"
            android:paddingStart="@dimen/padding_14dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/play_video_on_no_wifi_tip"
                android:textColor="@color/text333"
                android:textSize="@dimen/text_16sp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_32dp"
                android:layout_gravity="center_vertical"
                android:switchMinWidth="20dp"
                android:textOff="  "
                android:textOn="  "
                android:thumb="@drawable/thumb"
                android:track="@drawable/track" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44dp"
        android:layout_marginTop="@dimen/margin_14dp"
        android:background="@drawable/selector_bg_white_gray"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/padding_14dp"
        android:paddingStart="@dimen/padding_14dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/about"
            android:textColor="@color/text333"
            android:textSize="@dimen/text_16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_right_arrow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44dp"
        android:layout_marginTop="@dimen/margin_14dp"
        android:background="@drawable/selector_bg_white_gray"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/padding_14dp"
        android:paddingStart="@dimen/padding_14dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/good_comment_to_app"
            android:textColor="@color/text333"
            android:textSize="@dimen/text_16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_right_arrow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44dp"
        android:layout_marginTop="@dimen/margin_14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_bg_white_gray"
            android:gravity="center"
            android:text="@string/logout"
            android:textColor="@color/text333"
            android:textSize="@dimen/text_16sp" />


    </LinearLayout>


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>