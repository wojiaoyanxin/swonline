<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="35dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/tv_sys_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/shape_radius_5_c9c9c9"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:text="星期三"
        android:textColor="@color/cl_ffffff"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.shangde.lepai.uilib.view.RoundImageView
        android:id="@+id/iv_sys_msg_head"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/iv_sys_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sys_time" />

    <View
        android:id="@+id/message_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/message_dot"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@+id/iv_sys_msg_head"
        app:layout_constraintTop_toTopOf="@id/iv_sys_msg_head" />

    <TextView
        android:id="@+id/tv_sys_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="课堂助手"
        android:textColor="@color/cl_333333"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_sys_msg_head"
        app:layout_constraintLeft_toRightOf="@id/iv_sys_msg_head"
        app:layout_constraintTop_toTopOf="@id/iv_sys_msg_head" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_sys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/cl_ffffff"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sys_name">

        <TextView
            android:id="@+id/tv_sys_msg_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="@dimen/height_12dp"
            android:maxLines="1"
            android:text="新版本"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/text_17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_sys_msg_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="@dimen/height_12dp"
            android:layout_marginEnd="13dp"
            android:text="您发起的美国贝汉文大学-MBA专通过过MBA专通过过MBA专通过过"
            android:textColor="@color/cl_333333"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sys_msg_title" />

        <ImageView
            android:id="@+id/iv_sys_msg"
            android:layout_width="0dp"
            android:layout_height="139dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="13dp"
            android:background="@drawable/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sys_msg_content" />

        <TextView
            android:id="@+id/tv_sys_item_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="13dp"
            android:text="查看详情"
            android:textColor="@color/cl_3D83DA"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_sys_msg" />

        <ImageView
            android:id="@+id/iv_sys_item_arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/iv_sys_arrows"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_sys_msg"

            />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>