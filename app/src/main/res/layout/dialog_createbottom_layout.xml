<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <TextView
        android:id="@+id/tv_comm_dialog_photo"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="相册"
        android:textColor="@color/cl_333333"
        android:textSize="16sp"
        />
    <View
        android:id="@+id/v_comm_dialog_photo"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cl_dcdcdc"
        app:layout_constraintTop_toBottomOf="@id/tv_comm_dialog_photo"
        />
    <TextView
        android:id="@+id/tv_comm_dialog_take"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="拍照"
        android:textColor="@color/cl_333333"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/v_comm_dialog_photo"
        />

    <View
        android:id="@+id/v_comm_dialog_take"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cl_dcdcdc"
        app:layout_constraintTop_toBottomOf="@id/tv_comm_dialog_take"
        />

    <TextView
        android:id="@+id/tv_comm_dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/cl_333333"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/v_comm_dialog_take"
        />

</android.support.constraint.ConstraintLayout>