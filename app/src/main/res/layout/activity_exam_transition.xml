<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sunlands.intl.yingshi.ui.activity.ExamTransitionActivity">

    <include layout="@layout/layout_common_header" />

    <include layout="@layout/layout_header_bottom_line" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/home_plan"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/exam_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#030303"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="252dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/exam_info_bg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="#F4F4F4"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="14dp"
                                android:text="考试截止时间"
                                android:textSize="14sp" />

                            <TextView

                                android:id="@+id/endTime"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="-"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dddddd" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="#F4F4F4"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="14dp"
                                android:text="客观题总分"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/objectiveScore"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="-"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dddddd" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="#F4F4F4"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="14dp"
                                android:text="主观题总分"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/subjectiveScore"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="-"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dddddd" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="#F4F4F4"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="14dp"
                                android:text="总分"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/totalScore"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="-"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dddddd" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="#F4F4F4"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="14dp"
                                android:text="时间限制"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/duration"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="-"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dddddd" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="#F4F4F4"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="14dp"
                                android:text="可参加次数"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/repeat"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="-"
                                android:textSize="14sp" />


                        </LinearLayout>


                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="24dp"
                        android:text="考试须知"
                        android:textColor="#030303"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/exam_xuzhi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text=""
                        android:textColor="#030303"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_jilu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="24dp"
                        android:text="成绩记录"
                        android:textColor="#030303"
                        android:textSize="16sp" />


                    <LinearLayout
                        android:id="@+id/ll_jilu"
                        android:layout_width="match_parent"
                        android:layout_height="82dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/exam_info_bg"
                        android:orientation="vertical"
                        android:padding="1dp">


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#f4f4f4"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="12dp"
                                android:text="答题日期 "
                                android:textColor="#030303"
                                android:textSize="13sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#dddddd" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.7"
                                android:gravity="center"
                                android:text="所用时间 "
                                android:textColor="#030303"
                                android:textSize="13sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#dddddd" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="center"
                                android:text="客观分"
                                android:textColor="#030303"
                                android:textSize="13sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#dddddd" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="center"
                                android:text="主观分 "
                                android:textColor="#030303"
                                android:textSize="13sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#dddddd" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="总分 "
                                android:textColor="#030303"
                                android:textSize="13sp" />


                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dddddd" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#ffffff"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/dateTime"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="#030303"
                                android:textSize="11sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#dddddd" />

                            <TextView
                                android:id="@+id/useTime"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.7"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="#030303"
                                android:textSize="11sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#dddddd" />

                            <TextView
                                android:id="@+id/objectiveScore_bottom"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="#030303"
                                android:textSize="11sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#dddddd" />

                            <TextView
                                android:id="@+id/subjectiveScore_bottom"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="#030303"
                                android:textSize="11sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#dddddd" />

                            <TextView
                                android:id="@+id/totalScore_bottom"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="#030303"
                                android:textSize="11sp" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="80dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />


            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/enter_jiexi"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="37dp"
                android:layout_weight="1"
                android:background="@drawable/button_look_jiexi"
                android:gravity="center"
                android:text="查看解析"
                android:textColor="#333333"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/enter_question"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:layout_weight="1"
                android:background="@drawable/button_common_home"
                android:gravity="center"
                android:text="进入答题"
                android:textColor="#333333"
                android:textSize="14sp" />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
