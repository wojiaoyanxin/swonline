<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_ffffff"
    android:paddingLeft="16dp"
    >

    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="订单名称"
        android:textColor="@color/cl_999999"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_order_name_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="32dp"
        android:text=" "
        android:textColor="#030303"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/tv_order_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_order_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="订单金额"
        android:textColor="@color/cl_999999"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_order_name_content"
        />

    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="订单编号"
        android:textColor="@color/cl_999999"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_order_money"
        />

    <TextView
        android:id="@+id/tv_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
        android:text="订单时间"
        android:textColor="@color/cl_999999"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_order_number"
        />

    <ImageView
        android:id="@+id/iv_order_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/iv_order_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tv_order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/iv_order_state"
        app:layout_constraintTop_toTopOf="@id/iv_order_icon"
        app:layout_constraintLeft_toLeftOf="@id/iv_order_icon"
        android:layout_marginLeft="30dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:textColor="@color/cl_ffffff"
        android:textSize="8sp"
        />
</android.support.constraint.ConstraintLayout>
